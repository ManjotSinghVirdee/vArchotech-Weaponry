<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<!-- ==== Archotech Rifle ==== -->
<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>V_ArchotechRifle</defName>
    <label>Archotech Rifle</label>
		<description>A rifle-like weapon crafted by a mysterious archotech. This weapon fires bolts of concentrated void energy that can destroy almost any target.</description>
    <techLevel>Archotech</techLevel>
	<graphicData>
      <texPath>Weapon/AW_ArchotechRifle</texPath>
    <graphicClass>Graphic_Single</graphicClass>
  </graphicData>
  <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>V1_Archotech_LevelOne</researchPrerequisite>
      <skillRequirements>
        <Crafting>14</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Steel>50</Steel>
	  <Plasteel>50</Plasteel>
	  <ComponentIndustrial>6</ComponentIndustrial>
      <ComponentSpacer>6</ComponentSpacer>
    </costList>
    <thingSetMakerTags>
    </thingSetMakerTags>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
	  <li>Ultratech</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>1.25</Mass>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>AW_Bullet_ArchotechRifle</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>35</range>
        <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
        <burstShotCount>2</burstShotCount>
        <soundCast>XChargeSound</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
</ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>AW_Bullet_ArchotechRifle</defName>
    <label>archotech rifle bullet</label>
    <graphicData>
      <texPath>Projectile/Shot_Archotech</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>9</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <armorPenetrationBase>0.35</armorPenetrationBase>
      <speed>95</speed>
    </projectile>
  </ThingDef>

</Defs>