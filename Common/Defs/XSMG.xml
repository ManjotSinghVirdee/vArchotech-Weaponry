        <defaultProjectile>Bullet_XSMG</defaultProjectile>
        <warmupTime>0.35</warmupTime>
        <range>20</range>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <burstShotCount>8</burstShotCount>
        <soundCast>XSMGSound</soundCast>
