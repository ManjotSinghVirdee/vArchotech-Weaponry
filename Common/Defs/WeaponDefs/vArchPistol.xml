<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<!-- ==== Archotech Pistol ==== -->
<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>MSV_ArchotechPistol</defName>
    <label>Archotech Pistol</label>
    <description>A small, yet advanced and powerful pistol crafted by a mysterious archotech. These pistols are very rarely seen wielded by mysterious or very powerful personalities, since they can deal heavy damage despite being so small.</description>
  <techLevel>Archotech</techLevel>
	<graphicData>
      <texPath>Weapons/AW_ArchotechPistol</texPath>
    <graphicClass>Graphic_Single</graphicClass>
  </graphicData>
  <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>MSV_Archotech_LevelOne</researchPrerequisite>
      <skillRequirements>
        <Crafting>14</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Steel>10</Steel>
	  <Plasteel>10</Plasteel>
	  <ComponentIndustrial>1</ComponentIndustrial>
      <ComponentSpacer>1w</ComponentSpacer>
    </costList>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
	  <li>Ultratech</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>20000</WorkToMake>
      <Mass>0.5</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>1.00</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>AW_Bullet_ArchotechPistol</defaultProjectile>
        <warmupTime>0.15</warmupTime>
        <range>25</range>
        <ticksBetweenBurstShots>40</ticksBetweenBurstShots>
        <burstShotCount>2</burstShotCount>
        <soundCast>XChargeSound</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
</ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>AW_Bullet_ArchotechPistol</defName>
    <label>archotech pistol bullet</label>
    <graphicData>
      <texPath>Projectile/Shot_Archotech</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <armorPenetrationBase>0.45</armorPenetrationBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>

</Defs>